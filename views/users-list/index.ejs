<% layout('../layouts/main') %>

<h3>Список пользователей</h3>

<table class="table table-hover table-striped">
    <thead>
    <tr>
        <th scope="col">№</th>
        <th scope="col">Логин</th>
        <th scope="col">Email</th>
        <th scope="col">Дата регистрации</th>
    </tr>
    </thead>
    <tbody>
        <% var num = 0; %>

        <% users.forEach(function(user) { %>
        <tr>
            <td><%= ++num %></td>
            <th scope="row"><%= user.username %></th>
            <td><%= user.email %></td>
            <td><%= user.created %></td>
        </tr>
        <% }); %>
    </tbody>
</table>