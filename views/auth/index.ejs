<% layout('../layouts/main') %>

<script src="/js/routes/auth.js"></script>

<div>
    <form id="authForm">
        <div class="form-group">
            <label class="col-form-label" for="username">Логин</label>
            <input type="text" name="username" class="form-control" placeholder="" id="username" required>
        </div>

        <div class="form-group">
            <label for="password">Пароль</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Пароль" required>
        </div>

        <div>
            <button class="btn btn-primary" type="submit">Войти</button>
        </div>
    </form>
</div>

<div id="failure_msg" class="alert alert-danger" style="display: none">
    Логин или пароль не верны!
</div>



